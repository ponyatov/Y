<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension point="org.eclipse.ui.perspectives">
      <perspective
            class="org.eclipse.bI.Perspective"
            id="org.eclipse.bI.perspective"
            icon="META-INF/icon.png"
            name="bI">
      </perspective>
   </extension>
   
   <extension point="org.eclipse.ui.perspectiveExtensions">
   		<perspectiveExtension targetID="org.eclipse.bI.perspective">
   			<hiddenMenuItem id="org.eclipse.ui.run"/>
   			<hiddenMenuItem id="org.eclipse.help.menu"/>
   			<hiddenMenuItem id="org.eclipse.ui.help"/>
   			<hiddenMenuItem id="org.eclipse.search.menu"/>
   		</perspectiveExtension>
   </extension>
   
   <extension point="org.eclipse.ui.activities">
   	  <activity
   	  		name="bI Activity"
   	  		description="Developing in bI: disable unwanted activities"
   	  		id="org.eclipse.bI.activity"
   	  />
   	  <activityPatternBinding
   	  		activityId="org.eclipse.bI.activity"
   	  		pattern="org.eclipse.cdt.*"
   	  />
   	  <activityPatternBinding
   	  		activityId="org.eclipse.bI.activity"
   	  		pattern="org.eclipse.jdt.*"
   	  />
   </extension>
   
   <extension
   		point="org.eclipse.core.resources.natures"
   		id="org.eclipse.bI.nature"
   		name="bI nature">
   </extension>
   
   <extension point="org.eclipse.ui.newWizards">
   		<category id="org.eclipse.bI.category" name="_bI"/>
   		<primaryWizard id="org.eclipse.bI.new"/>
   		<wizard
   			id="org.eclipse.bI.new"
   			name="bI project"
   			category="org.eclipse.bI.category"
   			class="org.eclipse.bI.NewbI"
   			icon="META-INF/new_project.png"
   		>
   		<description>Inherit new bI project from prototype system.</description>
   		</wizard>
   </extension>
   
</plugin>
